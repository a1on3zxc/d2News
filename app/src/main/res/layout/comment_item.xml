<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#1B1E21"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="1dp">

        <!--        <LinearLayout-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="match_parent"-->
        <!--            android:orientation="vertical">-->

        <RelativeLayout
            android:id="@+id/user_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#2F363D"
            android:paddingBottom="6dp">

            <ImageView
                android:id="@+id/user_photo"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:padding="5dp"
                android:scaleType="centerCrop"
                android:src="@drawable/pudge0" />

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/user_photo"
                android:paddingStart="5dp"
                android:paddingTop="5dp"
                android:text="Alon3"
                android:textColor="#ECE9E9"
                android:textSize="22sp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/user_name"
                android:layout_toRightOf="@+id/user_photo">

                <TextView
                    android:id="@+id/user_date_reg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="5dp"
                    android:text="Регистрации: 22"
                    android:textColor="#ECE9E9"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/user_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/user_date_reg"
                    android:paddingStart="5dp"
                    android:text="Сообщения: 22"
                    android:textColor="#ECE9E9"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/user_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/user_message"
                    android:paddingStart="5dp"
                    android:text="Рейтинг: 2123"
                    android:textColor="#ECE9E9"
                    android:textSize="10sp" />

            </RelativeLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#2F363D">

            <TextView
                android:id="@+id/user_real_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:text="Message Message Message Message Message Message Message Message Message"
                android:textColor="#ECE9E9"
                android:padding="10dp"/>

<!--            <ImageView-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:src="@drawable/ic_arrow_back"-->
<!--                android:layout_below="@id/user_real_message"/>-->

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#2F363D">

            <TextView
                android:id="@+id/comment_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="час назад"
                android:textColor="#ECE9E9"
                android:textSize="10sp"
                android:paddingEnd="5dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"/>

            <TextView
                android:id="@+id/comment_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#1"
                android:textColor="#ECE9E9"
                android:textSize="12sp"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="5dp"
                android:paddingBottom="5dp"
                android:layout_alignParentBottom="true"/>

            <RelativeLayout
                android:id="@+id/relative_dislike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#000"
                android:alpha="0.3"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/like"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/like"
                android:paddingStart="5dp"/>

            <TextView
                android:id="@+id/count_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:layout_marginEnd="5dp"
                android:layout_toRightOf="@+id/like"
                android:textColor="#ECE9E9"
                android:paddingTop="6dp"
                android:paddingStart="4dp"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relative_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#000"
                android:alpha="0.3"
                android:layout_toRightOf="@+id/relative_dislike"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp">

            <ImageView
                android:id="@+id/dislike"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:paddingTop="3dp"
                android:paddingStart="5dp"
                android:src="@drawable/dislike"/>

            <TextView
                android:id="@+id/count_dislike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:textColor="#ECE9E9"
                android:paddingTop="6dp"
                android:layout_toRightOf="@id/dislike"
                android:paddingStart="4dp"
                android:layout_marginEnd="5dp"/>
            </RelativeLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <!--        </LinearLayout>-->

</LinearLayout>