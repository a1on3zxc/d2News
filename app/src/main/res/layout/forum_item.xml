<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:background="#1B1E21">

    <androidx.cardview.widget.CardView

        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="2dp"
        app:cardCornerRadius="1dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="#2F363D"
            >

            <TextView
                android:id="@+id/title_theme"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:text="The best carry"
                android:paddingStart="5dp"
                android:singleLine="true"
                android:paddingEnd="15dp"
                android:textColor="#ECE9E9"
                android:textSize="18sp" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/title_theme"
                android:paddingStart="10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="3dp"
                android:paddingTop="5dp"
                android:src="@drawable/ic_mode_comment"/>

            <TextView
                android:id="@+id/count_comments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="5dp"
                android:paddingStart="30dp"
                android:text="30"
                android:textSize="14sp"
                android:paddingTop="2dp"
                android:singleLine="true"
                android:gravity="center"
                android:textColor="#ECE9E9" />

            </RelativeLayout>


        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>